<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/dialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogText"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/textColorWhite"
        android:padding="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonVisitMoMA"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/buttonGoToMoMAText"
            android:textSize="20sp"
            android:textColor="@color/textColorWhite"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:padding="@dimen/marginBetweenTextViews"/>
        <Button
            android:id="@+id/buttonNotNow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorWhite"
            android:text="@string/buttonNotNowText"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:padding="@dimen/marginBetweenTextViews"/>
    </LinearLayout>
</LinearLayout>